<div id="statistics">
  <h2> Statistics </h2>
  <ul>
    <li>Average Comedian Age: <%= @comedians.avg_age %> </li>
    <li> Total Specials: <%= @specials.count %> </li>
    <li>Average Special Runtime: <%= @specials.avg_runtime_length %> </li>
    <li>Cities:
      <ul> <% @comedians.unique_cities.each do |city| %>
        <li> <%= city %> </li>
      <% end %>
      </ul>
    </li>
  </ul>
</div>

<div id="comedians">
  <h2> Comedians </h2>
  <% @comedians.each do |com| %>
  <%= com.name %>
    <ul id="comedian">
      <li>Age: <%= com.age %> </li>
      <li>City: <%= com.city %> </li>
      <li>Specials: <%= com.specials.count %>
        <ul> <% com.specials.each do |spec| %>
          <li> <%= spec.name %> </li>
          <img src=" <%= spec.image_url %> " class="img" alt=" <%= spec.name %> image ">
        <% end %>
        </ul>
      </li>
    </ul>
  <% end %>
</div>
